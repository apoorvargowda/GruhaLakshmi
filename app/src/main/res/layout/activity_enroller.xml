<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context=".enroller">

    <include layout="@layout/header" />

    <!-- title bar    -->

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/white"
        android:orientation="horizontal"
        android:padding="2dp">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentStart="true"
            android:layout_gravity="center"
            android:layout_marginStart="4dp"
            android:text="Enter Details"
            android:textColor="@color/black"
            android:textSize="@dimen/title_bar_text"
            android:textStyle="bold" />

        <ImageView
            android:layout_width="25dp"
            android:layout_height="25dp"
            android:layout_alignParentEnd="true"
            android:layout_gravity="center"
            android:layout_marginEnd="3dp"
            android:src="@drawable/logout" />
    </RelativeLayout>

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="wrap_content">


        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="20dp"
            android:orientation="vertical">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="start"
                android:text="Name"
                android:textColor="@color/black"
                android:textSize="@dimen/regular14sp"
                android:textStyle="normal" />

            <EditText
                android:id="@+id/apllicateName"
                android:textColor="@color/black"
                android:layout_width="match_parent"
                android:layout_height="46dp"
                android:layout_marginTop="4dp"
                android:autofillHints="ID"
                android:background="@drawable/edit_text_border"
                android:inputType="number"
                android:padding="6dp" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="start"
                android:layout_marginTop="10dp"
                android:text="Aadhaar number"
                android:textColor="@color/black"
                android:textSize="@dimen/regular14sp"
                android:textStyle="normal" />

            <EditText
                android:id="@+id/aadhaarNumber"
                android:textColor="@color/black"
                android:layout_width="match_parent"
                android:layout_height="46dp"
                android:layout_marginTop="4dp"
                android:autofillHints="ID"
                android:background="@drawable/edit_text_border"

                android:inputType="number"
                android:padding="6dp" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="10dp"
                android:orientation="horizontal">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="start"
                    android:text="Date of Birth"
                    android:textColor="@color/black"
                    android:textSize="@dimen/regular14sp"
                    android:textStyle="normal" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="120dp"
                    android:text="Gender"
                    android:textColor="@color/black"
                    android:textSize="@dimen/regular14sp"
                    android:textStyle="normal" />
            </LinearLayout>

            <LinearLayout
                android:layout_width="365dp"
                android:layout_height="wrap_content"
                android:orientation="horizontal">

                <EditText
                    android:id="@+id/gender"
                    android:layout_width="190dp"
                    android:layout_height="46dp"
                    android:autofillHints="ID"
                    android:background="@drawable/edit_text_border"
                    android:enabled="true"
                    android:padding="6dp"
                    android:textColor="@color/black" />

                <EditText
                    android:id="@+id/category"
                    android:layout_width="165dp"
                    android:layout_height="46dp"
                    android:layout_marginStart="10dp"
                    android:autofillHints="ID"
                    android:background="@drawable/edit_text_border"
                    android:enabled="true"
                    android:padding="6dp"
                    android:textColor="@color/black" />
            </LinearLayout>
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="start"
                android:layout_marginTop="10dp"
                android:text="Phone Number"
                android:textColor="@color/black"
                android:textSize="@dimen/regular14sp"
                android:textStyle="normal" />

            <EditText
                android:id="@+id/phonenumber"
                android:textColor="@color/black"
                android:layout_width="match_parent"
                android:layout_height="46dp"
                android:layout_marginTop="4dp"
                android:autofillHints="ID"
                android:background="@drawable/edit_text_border"
                android:inputType="phone"
                android:enabled="true"
                android:padding="6dp" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="start"
                android:layout_marginTop="10dp"
                android:text="District"
                android:textColor="@color/black"
                android:textSize="@dimen/regular14sp"
                android:textStyle="normal" />

            <EditText
                android:id="@+id/state"
                android:textColor="@color/black"
                android:layout_width="match_parent"
                android:layout_height="46dp"
                android:layout_marginTop="4dp"
                android:autofillHints="ID"
                android:background="@drawable/edit_text_border"
                android:enabled="true"
                android:padding="6dp" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="start"
                android:layout_marginTop="10dp"
                android:text="Taluk"
                android:textColor="@color/black"
                android:textSize="@dimen/regular14sp"
                android:textStyle="normal" />

            <EditText
                android:id="@+id/bankName"
                android:textColor="@color/black"
                android:layout_width="match_parent"
                android:layout_height="46dp"
                android:layout_marginTop="4dp"
                android:autofillHints="ID"
                android:background="@drawable/edit_text_border"
                android:enabled="true"
                android:padding="6dp" />


            <androidx.appcompat.widget.AppCompatButton
                android:layout_marginTop="20dp"
                android:layout_gravity="center"
                android:id="@+id/btnValidate"
                android:layout_width="160dp"
                android:layout_height="36dp"
                android:text="Submit"
                android:textAllCaps="false"
                android:textSize="@dimen/regular14sp"
                android:textColor="@color/white"
                android:background="@drawable/btn_blue_round"
                />

        </LinearLayout>

    </ScrollView>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="45dp"
        android:layout_weight="1"
        android:orientation="horizontal">

        <ImageView
            android:id="@+id/ivBackBtn"
            android:layout_width="25dp"
            android:layout_height="25dp"
            android:layout_margin="20dp"
            android:src="@drawable/back_arrow"
            app:tint="@color/blue" />
    </LinearLayout>
</LinearLayout>