<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:layout_gravity="center"
    tools:context=".Login">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="right
"
        android:orientation="horizontal">
        <TextView
            android:text="Choose Language"
            android:layout_margin="4dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"/>
        <Button
            android:text="@string/eng"
            android:id="@+id/englishBtn"
            android:layout_margin="4dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"/>
        <Button
            android:text="@string/kan"
            android:id="@+id/kanBtn"
            android:layout_margin="4dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"/>
    </LinearLayout>

    <LinearLayout
        android:layout_width="324dp"
        android:layout_height="wrap_content"
        android:layout_margin="50dp"
        android:gravity="center"
        android:orientation="vertical">

        <ImageView
            android:id="@+id/imageView"
            android:layout_width="80dp"
            android:layout_height="56dp"
            android:layout_margin="5dp"
            android:src="@drawable/karnataka_logo" />

        <LinearLayout
            android:layout_width="282dp"
            android:layout_height="wrap_content"
            android:weightSum="3"
            android:gravity="center"
            android:orientation="horizontal">

            <ImageView
                android:id="@+id/imageView4"
                android:layout_width="0dp"
                android:layout_weight="1"
                android:scaleType="fitXY"
                android:padding="8dp"
                android:layout_height="90dp"
                app:srcCompat="@drawable/cm" />

            <ImageView
                android:id="@+id/imageView5"
                android:layout_width="0dp"
                android:layout_weight="1"
                android:padding="8dp"
                android:scaleType="fitXY"
                android:layout_height="90dp"
                app:srcCompat="@drawable/dk" />

            <ImageView
                android:id="@+id/imageView6"
                android:layout_width="0dp"
                android:layout_weight="1"
                android:padding="8dp"
                android:scaleType="fitXY"
                android:layout_height="90dp"
                app:srcCompat="@drawable/lakshmi" />
        </LinearLayout>

        <ImageView
            android:id="@+id/imageView2"
            android:layout_width="164dp"
            android:layout_height="90dp"
            android:layout_margin="10dp"
            android:src="@drawable/gruhahome" />

        <ImageView
            android:id="@+id/imageView3"
            android:layout_width="231dp"
            android:layout_height="52dp"
            android:layout_margin="10dp"
            android:src="@drawable/gruhalogo" />

        <TextView
            android:id="@+id/textView"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/login"
            android:layout_margin="10dp"
            android:textColor="@color/black"
            android:textSize="25dp"
            android:textStyle="bold" />

        <TextView
            android:visibility="gone"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="left"
            android:layout_marginLeft="50dp"
            android:text="Choose role"
            android:textColor="@color/black"
            android:textSize="14dp"
            android:textStyle="bold" />

        <Spinner
            android:visibility="gone"
            android:id="@+id/spinner"
            android:layout_width="220dp"
            android:layout_height="40dp"
            android:layout_weight="1"
            android:background="@drawable/box_border"
            android:entries="@array/ChooseRole"
            android:textAlignment="textStart" />


            <EditText
                android:layout_marginTop="8dp"
                android:id="@+id/etMobileNumber"
                android:layout_width="200dp"
                android:layout_height="wrap_content"
                android:hint="@string/mobile_number"
                android:maxLength="10"
                android:singleLine="true"
                android:textColor="@color/black"
                android:background="@drawable/box_border"
                android:inputType="phone"
                android:textSize="24dp" />


        <androidx.appcompat.widget.AppCompatButton
            android:id="@+id/btnLogin"
            android:layout_width="135dp"
            android:layout_height="wrap_content"
            android:layout_marginStart="40dp"
            android:layout_marginTop="48dp"
            android:layout_marginEnd="40dp"
            android:background="@drawable/btn_blue_round"
            android:text="@string/log_in"
            android:textAllCaps="false"
            android:textColor="@color/white"
            android:textSize="@dimen/regular14sp" />

    </LinearLayout>

</LinearLayout>